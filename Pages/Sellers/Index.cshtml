@page
@model Buy_And_Sell_House_Core_Webapp.Pages.Shared.Sellers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sellers</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New Seller</a>
</p>
<table class="table table-striped table-primary table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Seller[0].House)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller[0].SellerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller[0].SellerPhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Seller) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.House.HouseAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerPhoneNumber)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Update</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
