@page
@model Buy_And_Sell_House_Core_Webapp.Pages.Shared.Sellers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Seller</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seller.House.HouseAddress" class="control-label"></label>
                <select asp-for="Seller.HouseId" class ="form-control" asp-items="ViewBag.HouseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Seller.SellerName" class="control-label"></label>
                <input asp-for="Seller.SellerName" class="form-control" />
                <span asp-validation-for="Seller.SellerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.SellerPhoneNumber" class="control-label"></label>
                <input asp-for="Seller.SellerPhoneNumber" class="form-control" />
                <span asp-validation-for="Seller.SellerPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
