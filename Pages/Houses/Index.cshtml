@page
@model Buy_And_Sell_House_Core_Webapp.Pages.Shared.Houses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Houses for sale</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New House</a>
</p>
<table class="table table-striped table-primary table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.House[0].HouseAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.House[0].HousePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.House) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HouseAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HousePrice)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Update</a> |
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">View</a> |
                <a class="btn btn-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
